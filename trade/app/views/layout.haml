%html(xmlns="http://www.w3.org/1999/xhtml")
  %head
    %meta(http-equiv="Content-type" content="text/html;charset=UTF-8")

    %link(rel="icon" href="/images/logo/TradingSystemIcon.png" type="image/png")

    %title Trading System - JOKR by #1
    - if defined? css
      %link(rel="stylesheet" href="/css/#{css}" type="text/css")
    - else
      %link(rel="stylesheet" href="/css/new_style.css" type="text/css")
    - if defined? script
      %script(type="text/javascript" src="/java-script/#{script}")

  %body{ defined?(onload) ? {:onload => "#{onload}"} : "" }
    %div(id="container")
      - auth = session[:auth] ? "yes" : "no"
      - user = session[:auth] ? session[:user] : "none"
      - account = session[:auth] ? session[:account] : "none"
      = render_file_with_argument('frame/header.haml', Array[auth, user, account])
      = render_file('frame/menu_org.haml') if session[:auth] && session[:account] != session[:user]
      = render_file('frame/menu_logged.haml') if session[:auth] && session[:account] == session[:user]
      = render_file('frame/menu_unlogged.haml') if !session[:auth]

      = render_file_with_argument('frame/subnavigation.haml', session[:subnavigation])
      %div(id="main")
        = yield
      = render_file('frame/footer.haml')