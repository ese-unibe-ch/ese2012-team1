%h2 My Inactive Items
%br
%ul
  - for item in inactive_items
    %li
      %em= item.name
      %em= item.price
      %img(height=50 width=50){ :alt => item.name, :src => item.picture }
      \:
    %div(class="itembuttons")
      %form(name="state" action="/changestate/setactive" method="post")
        %input(type="hidden" name="id" value="#{item.id}.#{item.name}")
        %input(class="itembuttons" type="submit" value="Set Active")
      %form(name="edit" action="/home/edit" method="post")
        %input(type="hidden" name="id" value="#{item.id}.#{item.name}")
        %input(class="itembuttons" type="submit" value="Edit Item")
      %form(name="delete" action="/home/delete" method="post")
        %input(type="hidden" name="id" value="#{item.id}.#{item.name}")
        %input(class="itembuttons" type="submit" value="Delete Item")
    %br
    %br