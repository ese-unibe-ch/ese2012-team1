%div(class="labeled-input")
  %form(action="/messagebox/send" id="send_form" method="post")
    -unless receiver_id.nil? || receiver_name.nil?
      %input(type="hidden" name="hidden#{receiver_id}" value="#{receiver_id}")
    %label
      Choose User:
    %input(type="text" name="query" id="query")
    %div(id="receivers")
      -unless receiver_id.nil? || receiver_name.nil?
        %span(id="div#{receiver_id}" class="receiver")
          = receiver_name
          %button(class="remove" onclick="removeReceiver(#{receiver_id})")
            x
    %label
      Subject:
    %input(type = 'text' name = 'subject')
    = haml :'partials/alert-textarea', :locals => { :name => :message, :label => "Message: " }
    %input(type = 'submit' value = 'send message')

%script(type="text/javascript" src="/java-script/add_remove_users.js")