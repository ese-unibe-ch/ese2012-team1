%h2 Edit Your Organisation
%form(action="/account/edit/organisation/profile" enctype="multipart/form-data" method="post")
  %table
    %tr
      %td(width="200px")
        %label Name:
      %td(width="400px")
        #{DAOAccount.instance.fetch_account(session[:account]).name}
    %tr
      %td
        %label Description:
      %td
        %textarea(name="description" cols=30 rows=10 )
          = DAOAccount.instance.fetch_account(session[:account]).description.to_s
    %tr
      %td
        %label Credit Limit for normal User (Empty for no Limit):
      %td
        %input(type="text" name="credit_limit" value="#{DAOAccount.instance.fetch_account(session[:account]).limit}")
    %tr
      %td
        %label Avatar:
      %td
        %input(type="file" name="avatar" size=50 maxlength="=100000" accept="image/*")
    %tr
      %td(colspan="2")
        %input(type="submit" id="editOrg" value="edit organisation")

%div(class="padding-top")
  %form(action="/organisation/delete" method="get")
    %button(class="warning" type="submit" name="delete organisation" value="delete organisation" id="deleteOrg")
      delete organisation