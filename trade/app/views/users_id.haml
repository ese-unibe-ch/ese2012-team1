%h2= "Users (#{params[:id]}) Active Items"
#usr_img
  %img(height=200 width=200){ :alt => User.get_user(params[:id]).name, :src => User.get_user(params[:id]).avatar }
%br
%div= User.get_user(params[:id]).description
%br
%h3 Check out my Items:
%ul
  - for item in active_items
    %li
      %em= item.name
      %em= item.price
      \:
      %a(href="/buy/#{item.id}.#{item.name}" ) Buy this item
