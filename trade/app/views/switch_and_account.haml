- current_user = Models::System.instance.fetch_account(my_arguments[0])
//- current_organisation = Models::System.instance.fetch_organisation(arg_array[2]) if arg_array[2] != "none"
//- current_organisation = nil if arg_array[2] == "none"
%div(id='information')
  %p= "User: #{current_user.name} - Credits: #{current_user.credits}"
%div(id='organisation')
  %form(name="organisation_switch" action="/switch_organisation" method="post")
    %input(type="submit" value="Watch as")
    %select(name="organisation" size="1")
      %option(value="#{current_user.email}") #{current_user.email}
      - for org in Models::System.instance.fetch_organisations_of(current_user.id)
        %option(value="#{org.name}") #{org.name}
