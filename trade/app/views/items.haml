%h2 All Items
%br
%ul
  - for item in all_items
    %li
      %em= item.name
      %em= " owned by #{item.owner.name} costs #{item.price} credits"
      \:
      %form(action="/buy" method="POST")
        %input(type = 'hidden' name = 'id'){ :value => "#{item.id}.#{item.name}" }
        %input(type = 'submit' value = 'Buy Item')
