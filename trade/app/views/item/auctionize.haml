%h2 Auctionize Item
%br
%form(action="/item/auctionize" enctype="multipart/form-data" method="post")
  %label Name of Item:
  %br
  %input(type="text" name="name" value="name")
  %br
  %label Description of Item:
  %br
  %textarea(name="description" cols=30 rows=10)
  %br
  %label Start Price:
  %br
  %input(type="text" name="start_price" value="2")
  %br
  %label Increment:
  %br
  %input(type="text" name="increment" value="1")
  %br
  %label Please enter end time
  %br
  //%input(type="text" name="date_time" value="#{Time.now}")
  %input(type="text" name="date_time" value="Wed Nov 14 02:12:57 +0100 2012")
  %br
  %label Item Picture:
  %br
  %input(type="file" name="item_picture" size=50 maxlength="=100000" accept="text/*")
  %br
  %input(type="submit" value="Auctionize")


