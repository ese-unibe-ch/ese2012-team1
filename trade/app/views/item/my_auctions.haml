- text = "Our"
- text = "My" if session[:account] == session[:user]
%h2= "#{text} Auctions"
%br
-if auctions.size != 0
  %table
    %tr
      %th Name
      %th
      %th Start Price
      %th Highest Bid
      %th Increment
      %th Time remaining
      %th
    - i = 0
    - own_auctions_count = 0
    - auctions.each do |auction_id,auction|
      - i = (i+1)%2
      -if auction.item.owner == Models::System.instance.fetch_account(session[:account])
        - own_auctions_count += 1
        %tr{ :class => i == 0 ? "colored" : "normal" }
          %td
            %a{:href => "/auction/#{auction.id}"}
              = auction.item.name
          %td
            %img(height=50 width=50){ :alt => auction.item.name, :src => auction.item.picture }
          %td= auction.price[0]
          %td= auction.price.last
          %td= auction.increment
          %td= auction.time_till_end

          %td
            %form(name="edit" action="/item/auction/edit" method="post")
              %input(type="hidden" name="id" value="#{auction.id}")
              %input(class="itembuttons" type="submit" value="Edit Auction")
      -elsif own_auctions_count == 0
        %tr{:class => i == 0 ? "colored" : "normal" }
          %td(colspan = "9")
            #{"You got no auctions"}
-else
  %p
    #{"There are yet no auctions"}