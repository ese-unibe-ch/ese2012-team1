%h2 My Active Items
%br
%ul
  - for item in active_items
    %li
      %em= item.name
      %em= item.price
      %div(class="itembuttons")
        %form(name="state" action="/changestate/setinactive" method="POST")
          %input(type="hidden" name="id" value="#{item.id}.#{item.name}")
          %input(type="submit" value="Set Inactive")
